{
  "name": "thrift-weaver-vscode",
  "displayName": "Thrift Weaver",
  "description": "Thrift language support for VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/kpumuk/thrift-weaver/"
  },
  "version": "0.0.1",
  "publisher": "kpumuk",
  "license": "MIT",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:thrift",
    "onCommand:thrift.restartLanguageServer"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "syntaxes/**",
    "language-configuration.json",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "media/icon.png"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "icon:render": "sh ./scripts/render-icon.sh",
    "bundle": "node ./scripts/bundle.mjs",
    "compile": "npm run bundle",
    "watch": "node ./scripts/bundle.mjs --watch",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "test:unit": "tsx --test src/**/*.test.ts",
    "test:syntax": "node ./scripts/test-syntax.mjs",
    "test:lsp-smoke": "node ./scripts/test-lsp-smoke.mjs",
    "test:extension-smoke": "node ./scripts/test-extension-smoke.mjs",
    "test": "npm run typecheck && npm run test:unit && npm run test:extension-smoke",
    "package": "vsce package"
  },
  "contributes": {
    "languages": [
      {
        "id": "thrift",
        "aliases": [
          "Thrift",
          "thrift"
        ],
        "extensions": [
          ".thrift"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "thrift",
        "scopeName": "source.thrift",
        "path": "./syntaxes/thrift.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "thrift.restartLanguageServer",
        "title": "Thrift: Restart Language Server"
      }
    ],
    "configurationDefaults": {
      "[thrift]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
      }
    },
    "configuration": {
      "title": "Thrift Weaver",
      "properties": {
        "thrift.server.path": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to a `thriftls` binary. When empty, the extension will use managed install (M4 Track C)."
        },
        "thrift.server.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Additional arguments passed to `thriftls`."
        },
        "thrift.format.lineWidth": {
          "type": "number",
          "default": 100,
          "minimum": 40,
          "markdownDescription": "Preferred formatter line width passed to `thriftls` formatting requests."
        },
        "thrift.trace.server": {
          "type": "string",
          "default": "off",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "markdownDescription": "LSP protocol tracing level for the Thrift language server."
        },
        "thrift.managedInstall.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable managed install for `thriftls` when available."
        },
        "thrift.managedInstall.manifestUrl": {
          "type": "string",
          "default": "https://github.com/kpumuk/thrift-weaver/releases/latest/download/thriftls-manifest.json",
          "markdownDescription": "URL for `thriftls` managed-install manifest."
        },
        "thrift.managedInstall.allowInsecureHttp": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Allow non-HTTPS URLs for managed install (for local testing only)."
        }
      }
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "tar": "^7.5.2",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@vscode/vsce": "^3.7.1",
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.2.1"
  }
}
